<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.roiugit.NewProofController"
            xmlns="http://javafx.com/javafx" prefHeight="400.0" prefWidth="600.0">
    <HBox spacing="20" alignment="CENTER" AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <VBox spacing="10" alignment="CENTER" minWidth="200">
            <TextField fx:id="premiseField" promptText="Enter a premise" HBox.hgrow="ALWAYS"/>
            <Button fx:id="addPremiseButton" text="Add Premise" onAction="#addPremise"/>
            <Button fx:id="createProofButton" text="Create Proof" onAction="#createProof"/>
        </VBox>

        <VBox fx:id="premisesListVBox" spacing="5" minWidth="200" HBox.hgrow="ALWAYS">
            <!-- Premises will be listed here -->
        </VBox>
    </HBox>
</AnchorPane>
